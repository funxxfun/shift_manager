<%# app/views/staffs/_form.html.erb %>

<%= form_with model: staff, class: "space-y-6" do |f| %>
  <% if staff.errors.any? %>
    <div class="p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
      <h3 class="font-bold mb-2"><%= staff.errors.count %>件のエラーがあります</h3>
      <ul class="list-disc list-inside text-sm">
        <% staff.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white rounded-xl shadow p-6">
    <h2 class="text-lg font-bold mb-4">基本情報</h2>

    <div class="space-y-4">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">社員コード <span class="text-red-500">*</span></label>
          <%= f.text_field :code, class: "block w-full px-4 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "E001" %>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">名前 <span class="text-red-500">*</span></label>
          <%= f.text_field :name, class: "block w-full px-4 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500", placeholder: "山田太郎" %>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">職種 <span class="text-red-500">*</span></label>
          <%= f.select :role, [['薬剤師', 'pharmacist'], ['事務', 'clerk']], {}, class: "block w-full px-4 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>
        <div>
          <label class="block text-sm font-medium text-gray-700 mb-1">所属店舗</label>
          <%= f.collection_select :base_store_id, Store.order(:code), :id, :name, { include_blank: '-- 選択してください --' }, class: "block w-full px-4 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
        </div>
      </div>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow p-6">
    <h2 class="text-lg font-bold mb-4">権限設定</h2>
    <p class="text-sm text-gray-600 mb-4">スタッフの権限レベルを設定してください。</p>

    <div>
      <%= f.select :permission_level, [
        ['スタッフ（閲覧のみ）', 'staff'],
        ['店舗管理者（自店舗の編集）', 'store_manager'],
        ['エリアマネージャー（補填実行）', 'area_manager'],
        ['本部管理者（全機能）', 'admin']
      ], {}, class: "block w-full px-4 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-indigo-500 focus:border-indigo-500" %>
    </div>
  </div>

  <div class="flex gap-4">
    <%= f.submit staff.persisted? ? '更新する' : '登録する', class: "flex-1 py-3 bg-indigo-600 text-white rounded-lg font-bold hover:bg-indigo-700 transition cursor-pointer" %>
    <%= link_to 'キャンセル', staffs_path, class: "flex-1 py-3 bg-gray-200 text-gray-700 rounded-lg font-bold text-center hover:bg-gray-300 transition" %>
  </div>
<% end %>
