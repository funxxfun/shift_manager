<%# app/views/staffs/_form.html.erb %>

<%= form_with model: staff, class: "space-y-6" do |f| %>
  <% if staff.errors.any? %>
    <div class="p-4 bg-red-100 border border-red-400 text-red-700 rounded-lg">
      <ul class="list-disc list-inside text-sm">
        <% staff.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="bg-white rounded-xl shadow p-6">
    <h3 class="text-lg font-bold mb-4">スタッフ情報</h3>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">社員コード</label>
        <%= f.text_field :code, class: "block w-full px-4 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "E001" %>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">氏名</label>
        <%= f.text_field :name, class: "block w-full px-4 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500", placeholder: "山田太郎" %>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">職種</label>
        <%= f.select :role, [['薬剤師', 'pharmacist'], ['事務', 'clerk']], {}, class: "block w-full px-4 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>
      <div>
        <label class="block text-sm font-medium text-gray-700 mb-1">所属店舗</label>
        <%= f.collection_select :base_store_id, Store.order(:code), :id, :name, { include_blank: '選択してください' }, class: "block w-full px-4 py-2 border rounded-lg text-sm focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      </div>
    </div>
  </div>

  <!-- ボタン -->
  <div class="flex gap-4">
    <%= f.submit staff.persisted? ? '更新' : '登録', class: "px-6 py-2 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 cursor-pointer" %>
    <%= link_to 'キャンセル', staffs_path, class: "px-6 py-2 bg-gray-200 text-gray-700 rounded-lg font-medium hover:bg-gray-300" %>
  </div>
<% end %>
