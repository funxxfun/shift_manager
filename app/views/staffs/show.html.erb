<%# app/views/staffs/show.html.erb %>

<div class="min-h-screen bg-gray-100">
  <header class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-4 px-6 shadow-lg">
    <h1 class="text-xl font-bold"><%= @staff.name %></h1>
    <p class="text-sm opacity-90">社員コード: <%= @staff.code %></p>
  </header>

  <div class="max-w-4xl mx-auto px-4 py-6">
    <!-- ナビゲーション -->
    <div class="flex flex-wrap gap-2 mb-6">
      <%= link_to staffs_path, class: "px-4 py-2 bg-white text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-50" do %>
        スタッフ一覧に戻る
      <% end %>
      <%= link_to edit_staff_path(@staff), class: "px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium" do %>
        編集
      <% end %>
    </div>

    <!-- 基本情報 -->
    <div class="bg-white rounded-xl shadow p-6 mb-6">
      <h3 class="text-lg font-bold mb-4">基本情報</h3>
      <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <dt class="text-sm text-gray-500">社員コード</dt>
          <dd class="font-medium"><%= @staff.code %></dd>
        </div>
        <div>
          <dt class="text-sm text-gray-500">氏名</dt>
          <dd class="font-medium"><%= @staff.name %></dd>
        </div>
        <div>
          <dt class="text-sm text-gray-500">職種</dt>
          <dd>
            <span class="px-2 py-1 text-xs rounded-full font-medium <%= @staff.pharmacist? ? 'bg-blue-100 text-blue-700' : 'bg-gray-100 text-gray-600' %>">
              <%= @staff.role_label %>
            </span>
          </dd>
        </div>
        <div>
          <dt class="text-sm text-gray-500">所属店舗</dt>
          <dd class="font-medium">
            <% if @staff.base_store %>
              <%= link_to @staff.base_store.name, @staff.base_store, class: "text-blue-600 hover:underline" %>
            <% else %>
              <span class="text-gray-400">未設定</span>
            <% end %>
          </dd>
        </div>
      </dl>
    </div>

    <!-- 直近のシフト -->
    <div class="bg-white rounded-xl shadow p-6">
      <h3 class="text-lg font-bold mb-4">直近のシフト</h3>
      <% recent_shifts = @staff.shifts.where('date >= ?', Date.current).order(:date).limit(10) %>
      <% if recent_shifts.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">日付</th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">店舗</th>
                <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">時間</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
              <% recent_shifts.each do |shift| %>
                <tr>
                  <td class="px-4 py-3 text-sm">
                    <%= shift.date.strftime('%Y/%m/%d (%a)') %>
                  </td>
                  <td class="px-4 py-3 text-sm">
                    <%= shift.store&.name %>
                  </td>
                  <td class="px-4 py-3 text-sm text-gray-600">
                    <%= shift.start_time&.strftime('%H:%M') %> - <%= shift.end_time&.strftime('%H:%M') %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <p class="text-gray-500 text-sm">今後のシフトはありません</p>
      <% end %>
    </div>
  </div>
</div>
