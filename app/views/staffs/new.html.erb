<%# app/views/staffs/new.html.erb %>

<div class="min-h-screen bg-gray-100">
  <header class="bg-gradient-to-r from-indigo-600 to-indigo-800 text-white py-4 px-6 shadow-lg">
    <h1 class="text-xl font-bold">スタッフ登録</h1>
    <p class="text-sm opacity-90">新しいスタッフを登録する</p>
  </header>

  <div class="max-w-2xl mx-auto px-4 py-6">
    <div class="mb-4">
      <%= link_to staffs_path, class: "text-indigo-600 hover:underline text-sm" do %>
        ← スタッフ一覧に戻る
      <% end %>
    </div>

    <%= render 'form', staff: @staff %>
  </div>
</div>
