<%# app/views/staffs/index.html.erb %>

<div class="min-h-screen bg-gray-100">
  <header class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-4 px-6 shadow-lg">
    <h1 class="text-xl font-bold">スタッフ管理</h1>
    <p class="text-sm opacity-90">スタッフ情報の登録・編集</p>
  </header>

  <div class="max-w-7xl mx-auto px-4 py-6">
    <% if flash[:notice] %>
      <div class="mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg text-sm">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <!-- ナビゲーション -->
    <div class="flex flex-wrap gap-2 mb-6">
      <%= link_to root_path, class: "px-4 py-2 bg-white text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-50" do %>
        シフト一覧
      <% end %>
      <%= link_to stores_path, class: "px-4 py-2 bg-white text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-50" do %>
        店舗管理
      <% end %>
      <%= link_to staffs_path, class: "px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium" do %>
        スタッフ管理
      <% end %>
      <%= link_to new_staff_path, class: "px-4 py-2 bg-green-600 text-white rounded-lg text-sm font-medium" do %>
        + 新規スタッフ
      <% end %>
    </div>

    <!-- サマリー -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-4 mb-6">
      <div class="bg-white rounded-xl p-4 shadow border-l-4 border-blue-500">
        <div class="text-xs text-gray-500">総スタッフ数</div>
        <div class="text-2xl font-bold text-blue-600"><%= @staffs.count %></div>
      </div>
      <div class="bg-white rounded-xl p-4 shadow border-l-4 border-green-500">
        <div class="text-xs text-gray-500">薬剤師</div>
        <div class="text-2xl font-bold text-green-600"><%= @staffs.pharmacist.count %></div>
      </div>
      <div class="bg-white rounded-xl p-4 shadow border-l-4 border-gray-400">
        <div class="text-xs text-gray-500">事務</div>
        <div class="text-2xl font-bold text-gray-600"><%= @staffs.clerk.count %></div>
      </div>
    </div>

    <!-- スタッフ一覧 -->
    <div class="bg-white rounded-xl shadow overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">コード</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">氏名</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">職種</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">所属店舗</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @staffs.each do |staff| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= staff.code %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                <%= link_to staff.name, staff, class: "text-blue-600 hover:underline" %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <span class="px-2 py-1 text-xs rounded-full font-medium <%= staff.pharmacist? ? 'bg-blue-100 text-blue-700' : 'bg-gray-100 text-gray-600' %>">
                  <%= staff.role_label %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                <%= staff.base_store&.name || '-' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                <%= link_to '編集', edit_staff_path(staff), class: "text-blue-600 hover:underline mr-3" %>
                <%= link_to '削除', staff, method: :delete, data: { turbo_method: :delete, turbo_confirm: "#{staff.name}を削除しますか？" }, class: "text-red-600 hover:underline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
