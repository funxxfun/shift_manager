<%# app/views/staffs/index.html.erb %>

<div class="min-h-screen bg-gray-100">
  <header class="bg-gradient-to-r from-indigo-600 to-indigo-800 text-white py-4 px-6 shadow-lg">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-xl font-bold">スタッフ管理</h1>
        <p class="text-sm opacity-90">スタッフ情報・権限設定</p>
      </div>
      <%= link_to new_staff_path, class: "bg-white text-indigo-700 px-4 py-2 rounded-lg font-bold text-sm hover:bg-gray-100 transition" do %>
        + 新規登録
      <% end %>
    </div>
  </header>

  <div class="max-w-6xl mx-auto px-4 py-6">
    <% if flash[:notice] %>
      <div class="mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <div class="bg-white rounded-xl shadow overflow-hidden">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">コード</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">名前</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">職種</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">所属店舗</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">権限</th>
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase">操作</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% @staffs.each do |staff| %>
            <tr class="hover:bg-gray-50">
              <td class="px-6 py-4 whitespace-nowrap text-sm font-mono text-gray-900">
                <%= staff.code %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                <%= staff.name %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <span class="px-2 py-1 rounded-full text-xs font-medium <%= staff.pharmacist? ? 'bg-blue-100 text-blue-700' : 'bg-gray-100 text-gray-700' %>">
                  <%= staff.role_label %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                <%= staff.base_store&.name || '-' %>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm">
                <% badge_class = case staff.permission_level
                   when 'admin' then 'bg-red-100 text-red-700'
                   when 'area_manager' then 'bg-purple-100 text-purple-700'
                   when 'store_manager' then 'bg-green-100 text-green-700'
                   else 'bg-gray-100 text-gray-600'
                   end %>
                <span class="px-2 py-1 rounded-full text-xs font-medium <%= badge_class %>">
                  <%= staff.permission_label %>
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm">
                <%= link_to '編集', edit_staff_path(staff), class: "text-blue-600 hover:underline mr-3" %>
                <%= link_to '削除', staff, method: :delete, data: { turbo_method: :delete, turbo_confirm: "#{staff.name}を削除しますか？" }, class: "text-red-600 hover:underline" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
