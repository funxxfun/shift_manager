<%# app/views/stores/show.html.erb %>

<div class="min-h-screen bg-gray-100">
  <!-- ヘッダー -->
  <header class="bg-gradient-to-r from-emerald-600 to-emerald-800 text-white py-4 px-6 shadow-lg">
    <h1 class="text-xl font-bold">🏪 <%= @store.name %></h1>
    <p class="text-sm opacity-90">店舗コード: <%= @store.code %></p>
  </header>

  <div class="max-w-2xl mx-auto px-4 py-6">
    <!-- 戻るリンク -->
    <div class="mb-4">
      <%= link_to stores_path, class: "text-blue-600 hover:underline text-sm" do %>
        ← 店舗一覧に戻る
      <% end %>
    </div>

    <% if flash[:notice] %>
      <div class="mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <!-- 店舗基本情報 -->
    <div class="bg-white rounded-xl shadow p-6 mb-6">
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-lg font-bold">店舗情報</h2>
        <%= link_to edit_store_path(@store), class: "text-blue-600 hover:underline text-sm" do %>
          編集する →
        <% end %>
      </div>

      <div class="space-y-3">
        <div class="grid grid-cols-2 gap-4">
          <div>
            <div class="text-xs text-gray-500">店舗コード</div>
            <div class="font-medium"><%= @store.code %></div>
          </div>
          <div>
            <div class="text-xs text-gray-500">店舗名</div>
            <div class="font-medium"><%= @store.name %></div>
          </div>
        </div>
        <div>
          <div class="text-xs text-gray-500">住所</div>
          <div class="font-medium"><%= @store.address.presence || '-' %></div>
        </div>
        <div>
          <div class="text-xs text-gray-500">最寄駅</div>
          <div class="font-medium"><%= @store.nearest_station.presence || '-' %></div>
        </div>
      </div>
    </div>

    <!-- 必要人数設定 -->
    <div class="bg-white rounded-xl shadow p-6">
      <h2 class="text-lg font-bold mb-4">必要人数設定</h2>

      <div class="overflow-x-auto">
        <table class="w-full text-sm">
          <thead>
            <tr class="border-b">
              <th class="text-left py-2 font-medium text-gray-600">曜日タイプ</th>
              <th class="text-center py-2 font-medium text-gray-600">💊 薬剤師</th>
              <th class="text-center py-2 font-medium text-gray-600">📋 事務</th>
            </tr>
          </thead>
          <tbody>
            <% @store.store_requirements.order(:day_type).each do |req| %>
              <tr class="border-b last:border-b-0">
                <td class="py-3">
                  <% case req.day_type %>
                  <% when "weekday" %>
                    📅 平日
                  <% when "saturday" %>
                    📆 土曜
                  <% when "holiday" %>
                    🎌 日祝
                  <% end %>
                </td>
                <td class="text-center py-3">
                  <span class="inline-block bg-blue-100 text-blue-800 px-3 py-1 rounded-full font-bold">
                    <%= req.pharmacist_count %>名
                  </span>
                </td>
                <td class="text-center py-3">
                  <span class="inline-block bg-gray-100 text-gray-800 px-3 py-1 rounded-full font-bold">
                    <%= req.clerk_count %>名
                  </span>
                </td>
              </tr>
            <% end %>
            <% if @store.store_requirements.empty? %>
              <tr>
                <td colspan="3" class="py-4 text-center text-gray-500">
                  必要人数が設定されていません
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- アクションボタン -->
    <div class="mt-6 flex gap-4">
      <%= link_to edit_store_path(@store), class: "flex-1 py-3 bg-blue-600 text-white rounded-lg font-bold text-center hover:bg-blue-700 transition" do %>
        編集する
      <% end %>
      <%= button_to '削除する', store_path(@store), method: :delete, data: { turbo_confirm: "#{@store.name}を削除しますか？" }, class: "flex-1 py-3 bg-red-600 text-white rounded-lg font-bold text-center hover:bg-red-700 transition cursor-pointer" %>
    </div>
  </div>
</div>
