<%# app/views/stores/show.html.erb %>

<div class="min-h-screen bg-gray-100">
  <header class="bg-gradient-to-r from-blue-600 to-blue-800 text-white py-4 px-6 shadow-lg">
    <h1 class="text-xl font-bold"><%= @store.name %></h1>
    <p class="text-sm opacity-90">店舗コード: <%= @store.code %></p>
  </header>

  <div class="max-w-4xl mx-auto px-4 py-6">
    <!-- ナビゲーション -->
    <div class="flex flex-wrap gap-2 mb-6">
      <%= link_to stores_path, class: "px-4 py-2 bg-white text-gray-700 rounded-lg text-sm font-medium hover:bg-gray-50" do %>
        店舗一覧に戻る
      <% end %>
      <%= link_to edit_store_path(@store), class: "px-4 py-2 bg-blue-600 text-white rounded-lg text-sm font-medium" do %>
        編集
      <% end %>
    </div>

    <!-- 基本情報 -->
    <div class="bg-white rounded-xl shadow p-6 mb-6">
      <h3 class="text-lg font-bold mb-4">基本情報</h3>
      <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <div>
          <dt class="text-sm text-gray-500">店舗コード</dt>
          <dd class="font-medium"><%= @store.code %></dd>
        </div>
        <div>
          <dt class="text-sm text-gray-500">店舗名</dt>
          <dd class="font-medium"><%= @store.name %></dd>
        </div>
        <div>
          <dt class="text-sm text-gray-500">住所</dt>
          <dd class="font-medium"><%= @store.address.presence || '-' %></dd>
        </div>
        <div>
          <dt class="text-sm text-gray-500">最寄り駅</dt>
          <dd class="font-medium"><%= @store.nearest_station.presence || '-' %></dd>
        </div>
      </dl>
    </div>

    <!-- 必要人数 -->
    <div class="bg-white rounded-xl shadow p-6 mb-6">
      <h3 class="text-lg font-bold mb-4">必要人数</h3>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-4 py-2 text-left text-xs font-medium text-gray-500 uppercase">曜日</th>
              <th class="px-4 py-2 text-center text-xs font-medium text-gray-500 uppercase">薬剤師</th>
              <th class="px-4 py-2 text-center text-xs font-medium text-gray-500 uppercase">事務</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-200">
            <% %i[weekday saturday holiday].each do |day_type| %>
              <% req = @store.store_requirements.find_by(day_type: day_type) %>
              <tr>
                <td class="px-4 py-3 text-sm font-medium">
                  <%= case day_type when :weekday then '平日' when :saturday then '土曜' when :holiday then '日祝' end %>
                </td>
                <td class="px-4 py-3 text-sm text-center">
                  <span class="px-3 py-1 bg-blue-100 text-blue-700 rounded-full font-medium">
                    <%= req&.pharmacist_count || 0 %>名
                  </span>
                </td>
                <td class="px-4 py-3 text-sm text-center">
                  <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full font-medium">
                    <%= req&.clerk_count || 0 %>名
                  </span>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <!-- 所属スタッフ -->
    <div class="bg-white rounded-xl shadow p-6">
      <h3 class="text-lg font-bold mb-4">所属スタッフ (<%= @store.staffs.count %>名)</h3>
      <% if @store.staffs.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
          <% @store.staffs.order(:code).each do |staff| %>
            <div class="flex items-center gap-3 p-3 bg-gray-50 rounded-lg">
              <span class="text-sm text-gray-500"><%= staff.code %></span>
              <span class="font-medium"><%= staff.name %></span>
              <span class="px-2 py-0.5 text-xs rounded-full <%= staff.pharmacist? ? 'bg-blue-100 text-blue-700' : 'bg-gray-200 text-gray-600' %>">
                <%= staff.role_label %>
              </span>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-sm">所属スタッフはいません</p>
      <% end %>
    </div>
  </div>
</div>
