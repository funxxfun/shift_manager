<%# app/views/stores/index.html.erb %>

<div class="min-h-screen bg-gray-100">
  <!-- ヘッダー -->
  <header class="bg-gradient-to-r from-emerald-600 to-emerald-800 text-white py-4 px-6 shadow-lg">
    <div class="flex justify-between items-center">
      <div>
        <h1 class="text-xl font-bold">🏪 店舗管理</h1>
        <p class="text-sm opacity-90">店舗と必要人数を管理する</p>
      </div>
      <% if current_staff.admin? %>
        <%= link_to new_store_path, class: "bg-white text-emerald-700 px-4 py-2 rounded-lg font-bold text-sm hover:bg-gray-100 transition" do %>
          + 新規登録
        <% end %>
      <% end %>
    </div>
  </header>

  <div class="max-w-4xl mx-auto px-4 py-6">
    <!-- 戻るリンク -->
    <div class="mb-4">
      <%= link_to shifts_path, class: "text-blue-600 hover:underline text-sm" do %>
        ← シフト一覧に戻る
      <% end %>
    </div>

    <% if flash[:notice] %>
      <div class="mb-4 p-4 bg-green-100 border border-green-400 text-green-700 rounded-lg">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <% if @stores.empty? %>
      <div class="bg-white rounded-xl shadow p-8 text-center">
        <div class="text-4xl mb-4">🏪</div>
        <p class="text-gray-600 mb-4">まだ店舗が登録されていません</p>
        <% if current_staff.admin? %>
          <%= link_to new_store_path, class: "inline-block bg-blue-600 text-white px-6 py-2 rounded-lg font-bold hover:bg-blue-700 transition" do %>
            店舗を登録する
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="grid gap-4">
        <% @stores.each do |store| %>
          <div class="bg-white rounded-xl shadow p-4 hover:shadow-lg transition">
            <div class="flex items-center justify-between">
              <div class="flex-1">
                <div class="flex items-center gap-2 mb-2">
                  <span class="bg-gray-200 text-gray-700 px-2 py-1 rounded text-xs font-mono"><%= store.code %></span>
                  <h3 class="font-bold text-lg"><%= store.name %></h3>
                </div>

                <% if store.address.present? || store.nearest_station.present? %>
                  <div class="text-sm text-gray-500 mb-3">
                    <% if store.nearest_station.present? %>
                      🚃 <%= store.nearest_station %>
                    <% end %>
                    <% if store.address.present? %>
                      <span class="ml-2">📍 <%= store.address %></span>
                    <% end %>
                  </div>
                <% end %>

                <!-- 必要人数サマリー -->
                <div class="flex flex-wrap gap-2">
                  <% weekday_req = store.store_requirements.find { |r| r.weekday? } %>
                  <% if weekday_req %>
                    <div class="bg-gray-50 rounded-lg px-3 py-2 text-xs">
                      <span class="text-gray-500">平日</span>
                      <span class="ml-2">💊<span class="font-bold text-blue-600"><%= weekday_req.pharmacist_count %></span></span>
                      <span class="ml-1">📋<span class="font-bold text-gray-600"><%= weekday_req.clerk_count %></span></span>
                    </div>
                  <% end %>
                  <% saturday_req = store.store_requirements.find { |r| r.saturday? } %>
                  <% if saturday_req %>
                    <div class="bg-gray-50 rounded-lg px-3 py-2 text-xs">
                      <span class="text-gray-500">土曜</span>
                      <span class="ml-2">💊<span class="font-bold text-blue-600"><%= saturday_req.pharmacist_count %></span></span>
                      <span class="ml-1">📋<span class="font-bold text-gray-600"><%= saturday_req.clerk_count %></span></span>
                    </div>
                  <% end %>
                  <% holiday_req = store.store_requirements.find { |r| r.holiday? } %>
                  <% if holiday_req %>
                    <div class="bg-gray-50 rounded-lg px-3 py-2 text-xs">
                      <span class="text-gray-500">日祝</span>
                      <span class="ml-2">💊<span class="font-bold text-blue-600"><%= holiday_req.pharmacist_count %></span></span>
                      <span class="ml-1">📋<span class="font-bold text-gray-600"><%= holiday_req.clerk_count %></span></span>
                    </div>
                  <% end %>
                  <% if store.store_requirements.empty? %>
                    <div class="text-xs text-orange-600">
                      ⚠️ 必要人数が未設定
                    </div>
                  <% end %>
                </div>
              </div>

              <!-- アクションボタン -->
              <div class="flex gap-2 ml-4">
                <%= link_to store_path(store), class: "p-2 text-gray-500 hover:text-blue-600 hover:bg-blue-50 rounded-lg transition", title: "詳細" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                  </svg>
                <% end %>
                <% if current_staff.can_manage_store?(store) %>
                  <%= link_to edit_store_path(store), class: "p-2 text-gray-500 hover:text-emerald-600 hover:bg-emerald-50 rounded-lg transition", title: "編集" do %>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                    </svg>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
